/* components/base/navbar/navbar.wxss */
.bar {
  position: relative;
  width: 100vw;
  font-size: 28rpx;
  background-color: transparent;
  transition: color 0.5s ease-in-out;
}

.status-bar {
  overflow: hidden;
}

.navbar {
  display: grid;
  align-items: center;
}

.navbar-left {
  flex-shrink: 0;
}

.navbar-page-route {
  display: flex;
  column-gap: 50rpx;
  margin-left: 10rpx;
}

.navbar-page-route>view {
  font-size: 36rpx;
}

.navbar-page-route>view::active {
  opacity: 0.8;
}

.navbar-body {
  flex-shrink: 0;
  text-align: center;
  font-size: 32rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.bar-body {
  position: relative;
  z-index: 2;
}

.bar-background {
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.bar-placeholder {
  width: 100vw;
}